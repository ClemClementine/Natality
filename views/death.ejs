                </div>
                <div class="inputs">
                  <label for="upfname">First Name</label>
                  <input type="text" placeholder="First Name" name="fname" id="upfname">
                </div>
                <div class="inputs">
                  <label for="upmname">Middle Name</label>
                  <input type="text" placeholder="Middle Name" name="mname" id="upmname">  
                </div>
                <div class="inputs">
                  <label for="uplname">Last Name</label>
                  <input type="text" placeholder="Last Name" name="lname" id="uplname">  
                </div>
                <div class="inputs">
                  <label for="upbday">Date of Birth</label>
                  <input type="date" placeholder="Birthday" name="bday" id="upbday">  
                </div>
                <div class="inputs">
                  <label for="upage">Age</label>
                  <input type="text" placeholder="Age" name="age" id="upage">  
                </div>
                <div class="inputs">
                  <label for="upicd10">ICD-10 Code</label>
                  <input type="text" placeholder="ICD-10 Code" name="icd10" id="upicd10">  
                </div>
